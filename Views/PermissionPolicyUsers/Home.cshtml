@{
    Layout = "_MyLayout";
    <!-- Reference to your main layout file -->
}

<style>
    /* Ensure the carousel images fit within the desired dimensions (1024x576) */
    #carouselExampleSlidesOnly .carousel-item img {
        width: 100%; /* Make sure images fill the container */
        height: 320px; /* Fixed height for 576px */
        object-fit: cover; /* Ensures images are cropped and cover the space properly */
    }

    /* Optional: Set the max-width of the carousel to match the 1024px width */
    #carouselExampleSlidesOnly {
        max-width: 1024px;
        margin: 0 auto; /* Center the carousel horizontally */
    }
</style>


<div class="container mt-5">
    <!-- Description Section -->
    <section id="description">
        <h2 class="text-center">🌟 সেবা চালিয়ে যেতে এডমিন এর সাথে যোগাযোগ করুণ 🌟</h2>
        <h2 class="text-center">আদর্শ পাঞ্জাবি টেইলার্শ</h2>
        <p class="text-center">"ঐতিহ্যের ২০ বছরের । আমরা আছি আপনাদের সেবায়।"</p>
    </section>

    <!-- Sliding Images Section (Carousel) -->
    <section id="carousel-section" class="mt-5">
        <h2 class="text-center">স্বাগতম</h2>
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
            <div class="carousel-inner">
                <!-- First Slide -->
                <div class="carousel-item active">
                    <img src="~/images/pic1.jpg" class="d-block w-100" alt="Image 1">
                </div>

                <!-- Second Slide -->
                <div class="carousel-item">
                    <img src="~/images/pic2.jpg" class="d-block w-100" alt="Image 2">
                </div>
                <!-- Third Slide -->
                <div class="carousel-item">
                    <img src="~/images/pic3.jpg" class="d-block w-100" alt="Image 3">
                </div>
                <!-- Add more slides as needed -->
            </div>
        </div>
    </section>
</div>

