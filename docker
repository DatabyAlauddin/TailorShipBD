FROM microsoft/dotnet:6.0-sdk AS build-env

WORKDIR /app

COPY . .

RUN dotnet restore

RUN dotnet publish -c Release -o /app/publish

# ---

FROM microsoft/dotnet:6.0-aspnetcore-runtime AS runtime

WORKDIR /app

COPY --from=build-env /app/publish .

EXPOSE 80

ENTRYPOINT ["dotnet", "TylorShop.dll"]
